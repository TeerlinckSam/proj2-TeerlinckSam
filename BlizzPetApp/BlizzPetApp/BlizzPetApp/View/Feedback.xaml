<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlizzPetApp.View.Feedback">
    <ContentPage.Content>
        <Grid BackgroundColor="LightGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Label x:Name="lblTitle"   VerticalOptions="Center"  Text="Feedback" HorizontalTextAlignment="Center" TextColor="Black" Grid.Row="0" FontSize="Large"/>

            <Entry Placeholder="Enter your email" Text="" x:Name="entEmail" Grid.Row="1" BackgroundColor="White" Margin="20,20,20,20"/>
            <Editor Text="Feedback:" x:Name="edtFeedback" Grid.Row="2" BackgroundColor="White" Margin="20,20,20,20"/>

            <Button x:Name="btnSend" Text="Send" VerticalOptions="End" HorizontalOptions="Center" Clicked="btnSend_Clicked" Grid.Row="3" Margin="0,0,0,15" BackgroundColor="White"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>